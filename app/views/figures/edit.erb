<h1>EDIT FIGURE</h1>
<form action ='/figures/<%=@figure.id%>' method='POST'>
  <input type="hidden" name="_method" value="patch">
  <label for = "Title"> Figure Name </label>
  <input type='text' name='figure[name]' id='figure_name' value='<%=@figure.name%>'>

    <br>
    <br>

  <label> Select Previous Title or Create New Title</label>
  <% Title.all.each do |title| %>
    <input id='<%= title.name %>' type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>>
  <% end %>

    <br>

  <label for = "Title">Change Title</label>
  <input type = 'text' name = 'title[name]' id = 'new_title'>

    <br>
    <br>

  <label for = "Landmark"> Create New Landmark</label>
  <input type = 'text' name = 'landmark[name]' id = 'new_landmark'><br>
  <label> Or Select Previous Landmark </label>
  <% Landmark.all.each do |landmark| %>
    <input id='landmark_<%= landmark.id %>' type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>

    <br>
    <br>

  <input type="submit" value="Edit Figure">

    <br>

</form>
