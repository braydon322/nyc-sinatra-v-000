<form action ='/figures' method='POST'>
  <label>Figure Name</label>
  <input type='text' name='figure[name]' id='figure_name'><br><br>

  <label for = "Title">Create New Title</label>
  <input type='text' name='title[name]' id='new_title'><br>

  <label> Or Select Previous Title </label>
  <% Title.all.each do |title| %>
  <label><%= title.name %></label>
    <input id='title_<%= title.id %>' type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
  <% end %><br><br>

  <label for = "Landmark"> Create New Landmark</label><br>
  <label>Name</label>
  <input type = 'text' name = 'landmark[name]' id = 'new_landmark'><br>
  <label>Year</label>
  <input type="text" name="landmark[year_completed]"><br>


  <label> Or Select Previous Landmark </label>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input id='landmark_<%=landmark.id%>' type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
  <% end %><br><br>
    <input type="submit" value="Create New Figure"><br>
</form>
